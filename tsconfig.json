{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "esnext",
    "lib": ["es2015", "esnext", "esnext.asynciterable", "dom"],
    "types": ["node"],
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "alwaysStrict": true,
    "downlevelIteration": false,
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "pretty": true,
    "strict": true
  },
  "include": ["packages/*/index.ts", "*.ts"],
  "exclude": ["node_modules", "old"]
}
